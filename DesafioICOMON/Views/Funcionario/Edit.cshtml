@model DesafioICOMON.Models.Funcionario

<div class="container mt-4">
  <h2>Editar Funcionário</h2>
  <form asp-action="Edit" method="post" class="mt-3">
    <div class="mb-3">
      <label class="form-label">ID</label>
      <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="mb-3">
      <label class="form-label">Nome</label>
      <input asp-for="Nome" class="form-control" />
      <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Email</label>
      <input asp-for="Email" class="form-control" />
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Departamento</label>
      <select asp-for="DepartamentoId" asp-items="ViewBag.Departamentos" class="form-select"></select>
      <span asp-validation-for="DepartamentoId" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Cargo</label>
      <select asp-for="CargoId" asp-items="ViewBag.Cargos" class="form-select"></select>
      <span asp-validation-for="CargoId" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Data de Admissão</label>
      <input asp-for="DataAdmissao" type="date" class="form-control" />
      <span asp-validation-for="DataAdmissao" class="text-danger"></span>
    </div>
    <div class="mb-3">
      <label class="form-label">Manager</label>
      <select asp-for="ManagerId" asp-items="ViewBag.Managers" class="form-select">
        <option value="">-- Nenhum --</option>
      </select>
      <span asp-validation-for="ManagerId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    <a asp-action="Delete" class="btn btn btn-danger">Excluir</a>
  </form>
</div>
