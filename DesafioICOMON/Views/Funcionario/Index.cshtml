@model IEnumerable<DesafioICOMON.Models.Funcionario>

@{
  ViewData["Title"] = "Funcionários";
}

<h2>Funcionários</h2>

<div class="mb-3">
  <a asp-action="Create" class="btn btn-primary">Novo Funcionário</a>
  <a asp-action="ExportarExcel" class="btn btn-success">Exportar para Excel</a>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>@Html.DisplayNameFor(model => model.Id)</th>
      <th>@Html.DisplayNameFor(model => model.Nome)</th>
      <th>@Html.DisplayNameFor(model => model.Cargo)</th>
      <th>@Html.DisplayNameFor(model => model.Departamento)</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>@item.Id</td>
        <td>@item.Nome</td>
        <td>@item.Cargo.Nome</td>
        <td>@item.Departamento.Nome</td>
        <td>
          <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
          <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
        </td>
      </tr>
    }
  </tbody>
</table>

