@model DesafioICOMON.Models.Departamento

<h2>Editar Departamento</h2>

<form asp-action="Edit">
  <input type="hidden" asp-for="Id" />

  <div class="form-group">
    <label asp-for="Id"></label>
    <input asp-for="Id" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="Nome"></label>
    <input asp-for="Nome" class="form-control" />
  </div>

  <div class="form-group">
    <label asp-for="Codigo"></label>
    <input asp-for="Codigo" class="form-control" type="number" step="1" />
  </div>

  <div class="form-check mb-3">
    <input asp-for="Ativo" class="form-check-input" />
    <label class="form-check-label">Ativo</label>
    <span asp-validation-for="Ativo" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-success">Salvar</button>
  <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

